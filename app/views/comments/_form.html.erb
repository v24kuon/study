<%= form_with(model: [post, comment] ) do |form| %>
  <div class="form-group">
    <%= form.text_area :content, class: 'form-control', style: "height: 150px;", placeholder: "コメントを入力してください" %>
  </div>
  <div class="form-group">
    <%= form.submit "コメントをする", class: 'btn btn-success btn-block' %>
  </div>
<% end %>
