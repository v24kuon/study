<p id="notice"><%= notice %></p>
<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Tag</th>
      <th>Body</th>
      <th>hour</th>
      <th>minutes</th>
      <th>Post image</th>
      <th>Post video</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.tag %></td>
        <td><%= post.body %></td>
        <td><%= post.hour %></td>
        <td><%= post.minutes %></td>
        <td><%= attachment_image_tag post, :image, :fill, 100, 100, class: "img-fluid rounded", fallback: "sample.jpg"%></td>
        <td><%= post.post_video %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
