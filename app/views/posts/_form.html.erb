<%= form_with(model: post, local: true) do |f| %>

  <div class="form-group"　id="post_image">
    <%= f.label :tag_list, 'タグをカンマ区切りで入力' %>
    <%= f.text_field :tag_list, value: @post.tag_list.join(','), "data-role" => "tagsinput", class: "form-control" %>
  </div>


  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control", style: "height: 150px;",required: true %>
  </div>

  <div class="form-group">
    <%= f.label :hour %>
    <%= f.number_field :hour, class: "form-control", min: 0, max: 23, placeholder: "整数で入力" %>

    <%= f.label :minutes %>
    <%= f.number_field :minutes, class: "form-control", min: 0, max: 59, placeholder: "整数で入力" %>
  </div>

  <div class="form-group">
    <%= attachment_image_tag post, :image, class: "img-fluid rounded img-thumbnail", fallback: "sample.jpg", size: "200x200" %>
    <%= f.attachment_field :image %>
  </div>

  <div class="form-group">
    <%= f.label :post_video %>
    <%= f.text_field :post_video, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<script>
$(function(){
    // inputのidから情報の取得
    $('#post_image').on('change', function (e) {
// ここから既存の画像のurlの取得
    var reader = new FileReader();
    reader.onload = function (e) {
        $(".image").attr('src', e.target.result);
    }
// ここまで
    reader.readAsDataURL(e.target.files[0]); //取得したurlにアップロード画像のurlを挿入
});
});

</script>
